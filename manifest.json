{
	"name": "Bargain Hunter",
	"version":"1.0",
	"manifest_version": 2,
	"description":"An extension to search the web for the best price for an item.",
	"browser_action":
	{
		"default_icon":"icon.png",
		"default_title":"Bargain Hunter",
		"default_popup":"popup.html"
	},
	"permissions":
	[
		"activeTab",
		"https://*.google.com/*",
		"https://ajax.googleapis.com/",
		"<all_urls>"
	],
	"content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'"
}